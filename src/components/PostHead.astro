---
import BaseHead from '~/components/BaseHead.astro'
import { site } from '~/setting'

const {
  title,
  description,
  image,
  publishedTime,
  modifiedTime,
  author,
  section,
  tags,
} = Astro.props

const openGraph = {
  basic: {
    title,
    type: 'article',
    image: image?.url || new URL('/placeholder-cover.jpg', Astro.site),
    url: new URL(Astro.url.pathname, Astro.site!.origin),
  },
  optional: {
    description,
  },
  image: {
    type: 'image/jpeg',
    alt: image?.alt || title,
  },
  article: {
    publishedTime,
    modifiedTime,
    author: author || site.author,
    section,
    tags,
  },
}
---

<BaseHead
  title={title}
  description={description}
  openGraph={openGraph}
/>
